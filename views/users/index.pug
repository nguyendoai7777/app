extends ../layout/general
block general
  

  h1 User List

  .d-flex.align-items-center.justify-content-between.mb-4
    a(href="/users/create" class="btn btn-primary") Create

    form(action='/users/search', method='GET', autocomplete="off", class="d-flex")
      input(type='text', name='q', autocomplete="off", class="form-control")
      button.ml-4.btn.btn-primary Search
    
  table.table
    tr
      th Avatar
      th Name
      th Phone
      th Details

    each user in users 
      tr
        td
          img(src=user.avatar).avatar-dashbroad
        td= user.name
        td= user.phone
        td
          a.btn.btn-outline-success(href='/users/' + user.id) View